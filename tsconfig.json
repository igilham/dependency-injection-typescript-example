{
    "exclude": ["node_modules"],
    "include": ["./src/"],
    "compilerOptions": {
        "types": [
            "node",
            "reflect-metadata"
        ],
        "target": "ES2019",
        "module": "commonjs",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
